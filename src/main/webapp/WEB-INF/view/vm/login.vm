#set( $layout = "layout/empty.vm" )
#set($pageName="Login")
<div class="container">
    <div class="row">
        <div class="page-header">
            <h1>
                CloudRestaurant餐馆管理系统
                <small>克劳石科技有限公司</small>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="span4 offset4 well">
            <form class="form-login">
                <legend>登录</legend>
                <div class="control-group input-name">
                    <div class="controlls">
                        <input class="input-block-level" type="text" name="userName" placeholder="用户名"/>
                        <span class="help-inline error"></span>
                    </div>
                </div>
                <div class="control-group input-password">
                    <div class="controlls">
                        <input class="input-block-level" type="password" name="password" placeholder="密码"/>
                        <span class="help-inline error"></span>
                    </div>
                </div>
                <span class="btn btn-primary btn-submit">登录</span>
            </form>
        </div>
    </div>
</div>
